<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/citytraffic"
    >

     <View
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#b74d4a4a"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vowt"
        android:textSize="70dp"
        android:textColor="#22ae15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/vowt_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover everything brilliant."
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_below="@+id/vowt_id"
        android:layout_centerHorizontal="true"
        android:id="@+id/white_text"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/info"
        android:layout_below="@+id/white_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/info_image"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/info_image"
        android:background="@drawable/layout_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/msa_e_hoyea"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/twitter"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with twitter"
            android:textColor="#fff"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/or_layout"
        android:layout_below="@+id/msa_e_hoyea"
        >

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="#fff"

            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"

            android:textSize="20dp"
            android:textColor="#fff"
            />

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="#fff"
            android:layout_marginLeft="20dp"
            />


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with email"
        android:layout_below="@+id/or_layout"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>
